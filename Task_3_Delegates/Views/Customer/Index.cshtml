@model IEnumerable<Task_3_Delegates.Models.Customer>

@{
    ViewData["Title"] = "Index";
}
<a>Lahore Customer </a>

<h1>Index</h1>

<div>
    <a asp-action="NameLahore" asp-controller="Customer">Lahore Customer Name</a> || 
    <a asp-action="GetLahoreName" asp-controller="Customer">Lahore Customer List</a> ||
    <a asp-action="GetAge" asp-controller="Customer">Those Customer Who Age B/W (55-60)</a> ||
    <a asp-action="GetTotal" asp-controller="Customer">Total Grant</a>
</div>
<div>
    <h2>Total: @ViewBag.Total</h2>
    @ViewData["total"]
</div>
<p>
    Total: @ViewBag.Total
</p>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrantTotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrantTotal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
